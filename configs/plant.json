{
    "name": "Binary_plant",
    "n_gpu": 1,

    "arch": {
        "type": "U_Net",
        "args": {

        }
    },
    "train_data_loader": {
        "type": "SegmentationLoader",
        "args":{
            "data_dir": "data/plant/",
            "batch_size": 10,
            "shuffle": true,
            "num_workers": 2,
            "mode": "train",
            "image_size" : 240
        }
    },
    "valid_data_loader": {
        "type": "SegmentationLoader",
        "args":{
            "data_dir": "data/plant/",
            "batch_size": 10,
            "shuffle": true,
            "num_workers": 2,
            "mode": "valid",
            "image_size" : 240
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "bce_logitloss",
    "metrics": [
        "seg_accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
